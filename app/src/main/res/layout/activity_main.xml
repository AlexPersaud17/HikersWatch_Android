<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.alexpersaud.hikerswatch.MainActivity">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/forest"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:text="Hiker's Watch"
        android:textColor="@android:color/white"
        android:textSize="50sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/latText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Latitude: "
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_marginTop="48dp" />

    <TextView
        android:id="@+id/longText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Longitude: "
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/latText"
        android:layout_alignStart="@+id/latText" />

    <TextView
        android:id="@+id/accText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accuracy: "
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/longText"
        android:layout_alignStart="@+id/latText" />

    <TextView
        android:id="@+id/altText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Altitude: "
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/accText"
        android:layout_alignStart="@+id/latText" />

    <TextView
        android:id="@+id/addressText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address: "
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/altText"
        android:layout_alignStart="@+id/latText" />

</RelativeLayout>
